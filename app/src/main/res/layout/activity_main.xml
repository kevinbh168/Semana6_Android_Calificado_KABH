<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="@drawable/fondo">
        <ImageView
            android:id="@+id/perfilId"
            android:layout_width="230dp"
            android:layout_height="280dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/foto_perfil"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:src="@drawable/tecsup"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perfilId"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:layout_marginTop="18dp"
            android:text="@string/Especialidad"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:shadowColor="#000000"
            android:shadowRadius="3"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/colorGrayBlue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre_y_apellidos"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_marginTop="20dp"/>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LIONEL MESSI CUCCITILLINI"
            android:textSize="27dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="350dp"
            android:layout_height="105dp"
            android:src="@drawable/cod_barras"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="30dp" />
    </LinearLayout>
</LinearLayout>