<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@drawable/fondo">
        <ImageView
            android:id="@+id/perfilId"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/foto_perfil"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/tecsup" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perfilId"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:layout_marginTop="18dp"
            android:text="@string/Especialidad"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            android:shadowColor="#000000"
            android:shadowRadius="3"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/colorGrayBlue">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre_y_apellidos"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_marginTop="60dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="45dp"
            android:text="LIONEL ANDRES \n MESSI CUCCITILLINI"
            android:textSize="35dp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="350dp"
            android:layout_height="105dp"
            android:src="@drawable/cod_barras"
            android:scaleType="fitXY"
            android:layout_marginHorizontal="35dp" />
    </LinearLayout>
</LinearLayout>